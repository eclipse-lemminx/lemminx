	xmlns:xi="http://www.w3.org/2001/XInclude">
	<start>
		<ref name="foo" />
	</start>
	<define name="foo">
		<choice>
			<element name="foo">
				<xi:include href="bar.rng" />
			</element>
			<element name="foo2">
				<element name="bar2">
					<attribute name="xml:base" >
						
					</attribute>
				</element>
			</element>
		</choice>
	</define>
</grammar>